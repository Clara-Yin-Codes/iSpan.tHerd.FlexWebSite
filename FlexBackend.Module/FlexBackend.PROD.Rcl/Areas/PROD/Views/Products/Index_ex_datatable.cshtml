@section Styles {
    <style>
        #dataTable tbody tr:nth-child(even) {
            background-color: #F2F2F2;
        }

        #dataTable tbody tr:hover {
            background-color: #f3e8ff;
        }

        /* 自訂表頭為紫色 */
        thead {
            background-color: #652D77; /* 深紫色，可改成你喜歡的色碼 */
